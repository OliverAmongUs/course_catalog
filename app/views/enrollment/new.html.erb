


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for User.find(@e_user_id) %>
        <%= User.find(@e_user_id).name%>
        <br/>
        <%= User.find(@e_user_id).email%>
      </h1>
    </section>
  </aside>
</div>



<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Course description</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% User.find(@e_user_id).courses.each do |course| %>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= course.course_description %></td>
        <td><%= course.course_id %></td>

      </tr>
    <% end %>
  </tbody>
</table>
